
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <script src="~/Scripts/toastr.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.6.3.min.js"></script>

</head>


<div class="row">
    <div class="col-md-12">

        <div class="container table-bordered table-light">
            <h5 class="text-center">Üyelik Sözleşmesi</h5>
            <br />
            <br />

            <form method="post">

                @foreach (var item in ViewBag.membershipagreements)
                {

                    <div class="form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align">
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6">
                            <input type="text" name="ID" value="@item.MembershipAgreementID" class="form-control" disabled />

                        </div>

                    </div>


                    <div class="form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align">
                            Başlık
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6">
                            <input type="text" name="MembershipAgreementTitle" value="@item.MembershipAgreementTitle" class="form-control" />

                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align">
                            Anahtar Kelime
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6">
                            <input type="text" name="Member_Keyword" value="@item.Member_Keyword" class="form-control" />

                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align">
                            Topic
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6">
                            <input type="text" name="Member_Topic" value="@item.Member_Topic" class="form-control" />

                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align">
                            İçerik
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6">
                            <textarea type="text" name="MembershipAgreementContent" rows="5" value="@item.MembershipAgreementContent" class="form-control">@item.MembershipAgreementContent</textarea>


                        </div>

                    </div>



                    <div class="In_solid"></div>
                    <div class="form-group">
                        <div class="col-md-9 offset-md-3 ">

                            <button type="submit" class="btn btn-success">Kaydet</button>
                            <button type="reset" class="btn btn-primary">Temizle</button>
                            <button type="button" class="btn btn-danger">İptal</button>


                        </div>

                    </div>
                }


            </form>

        </div>

    </div>


    @if (TempData["result"] != null && TempData["result"].ToString() == "1")
    {
        <script type="text/javascript">
            toastr["info"]("Kaydetme İşleminiz Başarılı Bir Şekilde Gerçekleştirilmiştir!", "Message")

        </script>

    }
</div>



