@using OnlineShopp.Models
@model OrderStatus
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

    <script src="~/Scripts/toastr.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.6.3.min.js"></script>

</head>

<div class="row">
    <div class="col-md-12">

        <div class="container table-bordered table-light">
            <br />
            <h5 class="text-center">Sipariş Durumunu Tanımla</h5>

            <br />
            <br />

            <form method="post">



                <div class="form-group">

                    <div class="col-md-6 col-sm-6">
                        <input type="text" name="OrderStatusID"  style="display:none;" value="@Model.OrderStatusID" class="form-control"/>

                    </div>

                </div>


                <div class="form-group">
                    <label class="col-form-label col-md-3 col-sm-3 label-align">
                       Sipariş Durumu
                        <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6">
                        <input type="text" name="OrderStatusDescription" value="@Model.OrderStatusDescription" class="form-control" />

                    </div>

                </div>


                <div class="form-group">
                    <label class="col-form-label col-md-3 col-sm-3 label-align">
                        Açıklama
                        <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6">
                        <textarea type="text" name="OrderStatusDetails" rows="5" value="@Model.OrderStatusDetails" class="form-control">@Model.OrderStatusDetails</textarea>


                    </div>

                </div>


                <div class="In_solid"></div>
                <div class="form-group">
                    <div class="col-md-9 offset-md-3 ">

                        <button type="submit" class="btn btn-success">Kaydet</button>
                        <button type="reset" class="btn btn-primary">Temizle</button>
                        <button type="button" class="btn btn-danger">İptal</button>


                    </div>

                </div>



            </form>

        </div>

    </div>

    @if (TempData["result"] != null && TempData["result"].ToString() == "1")
    {
        <script type="text/javascript">
            toastr["info"]("Kaydetme İşleminiz Başarılı Bir Şekilde Gerçekleştirilmiştir!", "Message")

        </script>

    }

</div>


