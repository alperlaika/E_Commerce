@model List<OnlineShopp.Models.Products>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sayac = 0;
}

<head>
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script type="module">
        import { Toast } from 'bootstrap.esm.min.js'

        Array.from(document.querySelectorAll('.toast'))
            .forEach(toastNode => new Toast(toastNode))
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <script type="text/javascript" src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

</head>
<div class="card-body">

    <div class="table-responsive">

        <table id="products" class="display" style="width:100%">
            <thead>
                <tr>
                    @*<th>No</th>*@
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Details</th>
                    <th>Stock Code</th>
                    <th>Amount</th>
                    <th>Category</th>
                    <th>Added Date</th>

                    <th>Edit</th>
                    <th>Delete</th>


                </tr>
            </thead>
            @*@{
                    int a = 1;
                }*@
            @foreach (var item in Model)
            {
                { 
                    sayac++;
                }
                <tbody>

                    <tr>
                        @*<td>@item.ProductID</td>*@
                        @if (item.ProductImage != null && item.ProductImage != "")
                        {
                            <td>
                                <div id="ProductImage" style="background-image:url(@item.ProductImage);background-position:center;background-size:contain;background-repeat:no-repeat;width:88px;height:50px;">

                                </div>
                            </td>
                        }

                        <td>@item.ProductName</td>
                        <td>@item.ProductPrice</td>

                        <td>

                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal_@sayac">
                                Details
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal_@sayac"  data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="staticBackdropLabel">@item.ProductName</h5>
                                        </div>
                                        <div class="modal-body">
                                            @item.ProductDetails
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </td>

                        <td>@item.ProductStock_Code</td>
                        <td>@item.ProductNumber</td>
                        <td>@item.Categories.Description</td>
                        <td>@item.ProductAddedDate.ToString()</td>

                        <td>
                            <a class="btn btn-primary" href="/Products/Add/@item.ProductID">Düzenle</a>
                        </td>
                        <td>
                            <a class="btn btn-primary" href="/Products/ProductDelete/@item.ProductID" onclick="return confirm('Ürünü Silmek İstediğinizden Emin Mısınız?')">Sil</a>
                        </td>


                    </tr>

                </tbody>
            }




        </table>

    </div>


</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#products').DataTable();
    });
    function ModalAc(detail) {
        document.getElementById("modalbodyalan").innerHTML = "";
        document.getElementById("modalbodyalan").innerHTML += detail;
        $("#staticBackdrop").addClass("show");
    }
</script>


