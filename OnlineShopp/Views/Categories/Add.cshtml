@using OnlineShopp.Models;
@model Categories
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <script src="~/Scripts/toastr.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.6.3.min.js"></script>

</head>

<div class="span3">
    <form method="post">

        <h3>Kategorileri Ekle</h3>
        <input type="text" value="@Model.CategoryID" name="CategoryID" style="display:none;" class="span3" />
        &nbsp;  <input type="text" value="@Model.Description" name="Description" class="span3" />

        <button type="submit" class="btn btn-primary">Kaydet</button>

    </form>

    <br />
    <br />
    <br />

    @*<div class="container">
        <div class="table-responsive">
            @Html.Action("categoryList", "Categories");

        </div>

    </div>*@

    @if (TempData["result"] != null && TempData["result"].ToString() == "1")
    {
        <script type="text/javascript">
            toastr["info"]("Kayıt Eklendi.", "Mesaj")

        </script>

    }

</div>

