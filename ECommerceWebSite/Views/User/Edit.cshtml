@model ECommerceWebSite.Models.Customers
@{
    ViewBag.Title = "Edit";
    Layout = null;
}
<head>

    <link href="/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/css/font-awesome.min.css" rel="stylesheet">
    <link href="/Content/css/prettyPhoto.css" rel="stylesheet">
    <link href="/Content/css/price-range.css" rel="stylesheet">
    <link href="/Content/css/animate.css" rel="stylesheet">
    <link href="/Content/css/main.css" rel="stylesheet">
    <link href="/Content/css/responsive.css" rel="stylesheet">



    <link rel="shortcut icon" href="~/Content/images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/images/ico/apple-touch-icon-57-precomposed.png">
    <script src="~/Content/js/jquery.js"></script>
</head>

<div>

    @Html.Partial("_TopMenu")
</div>

<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-10"><h1>Kullanıcı Hesabı</h1></div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->
            </hr><br>


            <div class="panel panel-default">
                <div class="panel-heading">HESAP <i class="fa fa-link fa-1x"></i></div>
                <div class="panel-body"><a href="/User/Edit/@Session["user"]"></a>Üyelik Bilgileri</div>
            </div>






        </div><!--/col-3-->
        <div class="col-sm-9">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#home">Anasayfa</a></li>
                @*<li><a data-toggle="tab" href="#messages">Menu 1</a></li>
            <li><a data-toggle="tab" href="#settings">Menu 2</a></li>*@
            </ul>


            <div class="tab-content">
                <div class="tab-pane active" id="home">
                    <hr>
                    <form class="form" action="##" method="post" id="registrationForm">
                        <div class="form-group">

                            <div class="col-xs-7">
                                <label for="first_name"><h4>Adı</h4></label>
                                <input type="text" class="form-control" name="CustomerName" id="CustomerName" value="@Model.CustomerName" placeholder="first name">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-7">
                                <label for="last_name"><h4>Soyadı</h4></label>
                                <input type="text" class="form-control" name="CustomerSurname" id="CustomerSurname" placeholder="last name" value="@Model.CustomerSurname">
                            </div>
                        </div>


                        <div class="form-group">

                            <div class="col-xs-7">
                                <label for="email"><h4>E-Posta</h4></label>
                                <input type="email" class="form-control" name="Email" id="Email" placeholder="you@email.com" value="@Model.Email">
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-7">
                                <label for="BillingAddress"><h4>Fatura Adresiniz</h4></label>
                                <textarea rows="1" name="BillingAddress" id="BillingAddress">@Model.BillingAddress</textarea>

                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-7">
                                <label for="DeliveryAddress"><h4>Teslimat Adresiniz</h4></label>
                                <textarea rows="1" name="DeliveryAddress" id="DeliveryAddress">@Model.DeliveryAddress</textarea>

                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-7">
                                <button type="submit" class="btn btn-default" value="Kaydet"></button>
                            </div>
                        </div>

                        @*<div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                                <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset</button>
                            </div>
                        </div>*@
                    </form>

                    <hr>

                </div><!--/tab-pane-->


            </div><!--/tab-pane-->
        </div><!--/tab-content-->

    </div><!--/col-9-->
</div><!--/row-->

<script src="~/Content/js/bootstrap.min.js"></script>
<script src="~/Content/js/jquery.scrollUp.min.js"></script>
<script src="~/Content/js/price-range.js"></script>
<script src="~/Content/js/jquery.prettyPhoto.js"></script>
<script src="~/Content/js/main.js"></script>

<script type="text/javascript">
    $(document).ready(function () {


        var readURL = function (input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('.avatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }


        $(".file-upload").on('change', function () {
            readURL(this);
        });
    });

</script>

