@model List<ECommerceWebSite.Models.Categories>

@foreach (var item in Model.Where(x => x.TopCategoryID == null))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordian" href="#TopCategoryID_@item.CategoryID">
                    <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                    <a href="/Product/ProductList/@item.CategoryID">@item.Description</a>
                </a>
            </h4>
        </div>
        <div id="TopCategoryID_@item.CategoryID" class="panel-collapse collapse">
            <div class="panel-body">
                <ul>
                    @foreach (var Subitem in Model.Where(x => x.TopCategoryID == item.CategoryID))
                    {
                        <li><a href="/Product/ProductList/@Subitem.CategoryID">@Subitem.Description</a></li>


                    }

                </ul>
            </div>
        </div>
    </div>

}
