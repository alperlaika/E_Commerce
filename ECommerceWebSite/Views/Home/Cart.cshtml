@using ECommerceWebSite.Models
@model List<SepetUrunOku>
@{
    ViewBag.Title = "Cart";
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>AnaSayfa | Öğrenciİşi </title>


    <link href="/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/css/font-awesome.min.css" rel="stylesheet">
    <link href="/Content/css/prettyPhoto.css" rel="stylesheet">
    <link href="/Content/css/price-range.css" rel="stylesheet">
    <link href="/Content/css/animate.css" rel="stylesheet">
    <link href="/Content/css/main.css" rel="stylesheet">
    <link href="/Content/css/responsive.css" rel="stylesheet">



    <link rel="shortcut icon" href="~/Content/images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/Content/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/Content/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/Content/images/ico/apple-touch-icon-57-precomposed.png">
    <script src="~/Content/js/jquery.js"></script>

</head>

@Html.Partial("_TopMenu")


<section>
    <div class="container">
        <div class="row">

            @{
                double? SepetToplam = 0;
                foreach (var items in Model)
                {
                    SepetToplam = SepetToplam + items.ShoppingCartTotal;
                }
            }
            <div class="container">
                <div class="row">
                    <div class="col-sm-12 col-md-10 col-md-offset-1">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th class="text-center">Price</th>
                                    <th class="text-center">Total</th>
                                    <th> </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="col-sm-8 col-md-6">
                                            <div class="media">
                                                <a class="thumbnail pull-left" href="#"> <img class="media-object" src="@item.UrunResim" style="width: 72px; height: 72px;"> </a>
                                                <div class="media-body">
                                                    <h4 class="media-heading"><a href="/Product/ProductDetail/@item.ShoppingCartProductID">@item.UrunIsmi</a></h4>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="col-sm-1 col-md-1" style="text-align: center">
                                            <input type="number" class="form-control" id="Miktar" readonly value="@item.ShoppingCartAmount">
                                        </td>
                                        <td class="col-sm-1 col-md-1 text-center"><strong>@item.UrunBirimFiyat</strong></td>
                                        <td class="col-sm-1 col-md-1 text-center"><strong>@item.ShoppingCartTotal</strong></td>
                                        <td class="col-sm-1 col-md-1">
                                            <button type="button" onclick="SatirSil(@item.ShoppingCartID)" class="btn btn-danger">
                                                <span class="glyphicon glyphicon-remove"></span> Sil
                                            </button>
                                        </td>
                                    </tr>

                                }
                                <tr>
                                    <td>   </td>
                                    <td>   </td>
                                    <td>   </td>
                                    <td><h3>Toplam </h3></td>
                                    <td class="text-right"><h3><strong>@SepetToplam ₺</strong></h3></td>
                                </tr>
                                <tr>
                                    <td>   </td>
                                    <td>   </td>
                                    <td>   </td>
                                    <td>
                                        <button type="button" class="btn btn-default">
                                            <span class="glyphicon glyphicon-shopping-cart"></span> Alışverişe Devam et
                                        </button>
                                    </td>
                                    <td>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>

<section>
    <div class="container">
        <h5 class="m-b-10">Siparişi Tamamla</h5>

        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 m-b-10">
                <span>Kargo Firması</span>
                <select required id="KargoFirmasi" class="form-control">
                    @foreach (var item in ViewBag.KargoFirmalari)
                    {
                        <option value="@item.CargoID">@item.Company</option>
                    }
                </select>

            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 m-b-10">
                <span>Ödeme Tipi</span>
                <select required id="OdemeTipi" class="form-control">
                    @foreach (var item in ViewBag.OdemeTipi)
                    {
                        <option value="@item.PaymentMethodID">@item.PaymentMethodDescription</option>
                    }
                </select>


            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 m-b-10">
                <span>Adres</span>
                <textarea required id="Adres" class="form-control"></textarea>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 m-b-10">
                <button type="button" onclick="AlisverisiTamamla()" class="btn btn-success" style="float:right;">
                    Alışverişi Tamamla <span class="glyphicon glyphicon-play"></span>
                </button>
            </div>


        </div>
    </div>
</section>

@Html.Partial("_FooterMenu")

<script type="text/javascript">
    function SatirSil(satirid) {
        $.ajax({
            url: "/Product/SepetSatirSil",
            data: { SatirID: satirid },
            type: "POST",
            success: function (data) {
                if (data == true) {
                    alert("Ürün Başarıyla sepetten kaldırıldı.");
                    window.location.href = '/Home/Cart/';

                }
            }
        });

    }

    function CikisYap() {
        $.ajax({
            url: "/Login/SignOut",
            type: "POST",
            success: function (data) {
                if (data == true) {
                    window.location.href = '/Home/Index/';
                }
                else {
                    alert("Çıkış Yapılamadı.");
                }
            }
        });
    }

    function AlisverisiTamamla() {

        var kargofirmasi = $("#KargoFirmasi").val();
        var odemetipi = $("#OdemeTipi").val();
        var adres = $("#Adres").val();


        $.ajax({
            url: "/Home/AlisverisiTamamla",
            data: { OdemeTipi: odemetipi, KargoFirmasi: kargofirmasi, Adres: adres },
            type: "POST",
            success: function (data) {
                if (data == true) {
                    alert("Sipariş Başarıyla Kaydedildi.");
                    window.location.href = '/Home/Cart/';

                }
            }
        });

    }

</script>







<script src="~/Content/js/bootstrap.min.js"></script>
<script src="~/Content/js/jquery.scrollUp.min.js"></script>
<script src="~/Content/js/price-range.js"></script>
<script src="~/Content/js/jquery.prettyPhoto.js"></script>
<script src="~/Content/js/main.js"></script>


